rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns a resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is a workspace member
    function isWorkspaceMember(workspaceId) {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/workspaces/$(workspaceId)) &&
             request.auth.uid in get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.members;
    }
    
    // Documents Collection - User-specific documents (PDFs, generated content)
    match /documents/{documentId} {
      // Users can only read their own documents
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      
      // Users can only create documents with their own userId
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.keys().hasAll(['type', 'title', 'content', 'userId', 'createdAt']) &&
                       request.resource.data.userId is string &&
                       request.resource.data.type is string &&
                       request.resource.data.title is string &&
                       request.resource.data.content is string;
      
      // Users can only update their own documents
      allow update: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid &&
                       request.resource.data.userId == resource.data.userId; // Prevent userId changes
      
      // Users can only delete their own documents
      allow delete: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid;
    }
    
    // PRDs Collection - Product Requirements Documents
    match /prds/{prdId} {
      // Users can only read their own PRDs
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      
      // Users can only create PRDs with their own userId
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      
      // Users can only update their own PRDs
      allow update: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid &&
                       request.resource.data.userId == resource.data.userId;
      
      // Users can only delete their own PRDs
      allow delete: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid;
    }
    
    // Workspaces Collection - Team workspaces
    match /workspaces/{workspaceId} {
      // Only workspace members can read
      allow read: if isAuthenticated() && 
                     request.auth.uid in resource.data.members;
      
      // Anyone authenticated can create a workspace, but must include themselves in members
      allow create: if isAuthenticated() && 
                       request.resource.data.members is list &&
                       request.auth.uid in request.resource.data.members;
      
      // Only workspace members can update, and cannot remove themselves if they're the only member
      allow update: if isAuthenticated() && 
                       request.auth.uid in resource.data.members &&
                       request.auth.uid in request.resource.data.members;
      
      // Only workspace members can delete
      allow delete: if isAuthenticated() && 
                       request.auth.uid in resource.data.members;
    }
    
    // Backlog Collection - Product backlog items
    match /backlog/{backlogId} {
      // Users can only read backlog items from workspaces they're members of
      allow read: if isAuthenticated() && 
                     isWorkspaceMember(resource.data.workspaceId);
      
      // Users can only create backlog items in workspaces they're members of
      allow create: if isAuthenticated() && 
                       isWorkspaceMember(request.resource.data.workspaceId);
      
      // Users can only update backlog items in workspaces they're members of
      allow update: if isAuthenticated() && 
                       isWorkspaceMember(resource.data.workspaceId) &&
                       request.resource.data.workspaceId == resource.data.workspaceId;
      
      // Users can only delete backlog items in workspaces they're members of
      allow delete: if isAuthenticated() && 
                       isWorkspaceMember(resource.data.workspaceId);
    }
    
    // Feedback Collection - Customer feedback
    match /feedback/{feedbackId} {
      // Users can only read feedback from workspaces they're members of
      allow read: if isAuthenticated() && 
                     isWorkspaceMember(resource.data.workspaceId);
      
      // Users can only create feedback in workspaces they're members of
      allow create: if isAuthenticated() && 
                       isWorkspaceMember(request.resource.data.workspaceId);
      
      // Users can only update feedback in workspaces they're members of
      allow update: if isAuthenticated() && 
                       isWorkspaceMember(resource.data.workspaceId) &&
                       request.resource.data.workspaceId == resource.data.workspaceId;
      
      // Users can only delete feedback in workspaces they're members of
      allow delete: if isAuthenticated() && 
                       isWorkspaceMember(resource.data.workspaceId);
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

