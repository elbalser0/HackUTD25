{
  "expo": {
    "name": "PNC Productivity App",
    "slug": "pnc-productivity-app",
    "version": "1.0.0",
    "sdkVersion": "54.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#005A9C"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app uses the microphone for voice input and speech recognition.",
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition to convert your voice to text for AI conversations."
      }
    },
    "android": {
      "backgroundColor": "#005A9C",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET"
      ]
    },
    "plugins": []
  }
}
